<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" minWidth="-Infinity" prefWidth="600.0" spacing="20.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.dbapp.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <children>
      <TextField fx:id="sqlbox" minHeight="-Infinity" minWidth="-Infinity" prefHeight="80.0" prefWidth="400.0" promptText="Enter SQL statement here" />
      <Button mnemonicParsing="false" onAction="#query" text="Run Query" />
      <TableView fx:id="qresult" prefHeight="200.0" prefWidth="200.0">
        <columns>
          <TableColumn prefWidth="75.0" text="C1" />
          <TableColumn prefWidth="75.0" text="C2" />
          <TableColumn prefWidth="75.0" text="C3" />
        </columns>
      </TableView>
   </children>
</VBox>
